# Railway Environment Variables Template
# Copy these variables to Railway dashboard under "Variables" tab

# ============= REQUIRED API KEYS =============
POLYGON_API_KEY=your_polygon_api_key_here
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET=your_alpaca_secret_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============= AI API KEYS (Optional) =============
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============= TRADING CONFIGURATION =============
PAPER_TRADING=true
SYSTEM_MODE=paper_trading
AUTOMATION_MODE=interactive
TICKER_PRICE_MIN=0.75
TICKER_PRICE_MAX=10.0
POSITION_SIZE_PERCENT=0.25
MAX_POSITION_SIZE_PERCENT=0.50
MIN_EXPECTED_MOVE=0.06
MAX_TRADES_PER_DAY=25
MAX_DAILY_LOSS_PERCENT=0.02

# ============= SYSTEM SETTINGS =============
LOG_LEVEL=INFO
RAILWAY_DEPLOYMENT=true
ENVIRONMENT=production
DATABASE_TYPE=file

# ============= HEALTH CHECK SETTINGS =============
HEALTH_CHECK_ENABLED=true
PORT=8000
